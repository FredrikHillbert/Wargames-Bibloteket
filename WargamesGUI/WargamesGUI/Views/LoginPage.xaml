<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WargamesGUI.MainPage">

    <StackLayout>
        <Label Text="Wargames Library" FontSize="Medium" FontAttributes="Bold" HorizontalTextAlignment="Center" TextColor="Black"></Label>
        <Entry Placeholder="Username" Margin="450,10,450,0"/>
        <Entry Placeholder="Password" Margin="450,10,450,0"/>
        <Button Text="Sign In" Margin="450,10,450,0" Clicked="SignIn_Button_Clicked"/>
    </StackLayout>

</ContentPage>
